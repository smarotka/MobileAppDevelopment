<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vaibhav.myfavmovie">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_movie"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MovieActivity"  android:label="@string/MovieActivity"/>
        <activity android:name=".EditActivity" android:label="@string/EditActivity" />
        <activity android:name=".DisplayListYearActivity" android:label="@string/DisplayListYearActivity" >
            <intent-filter>
                <action android:name="com.example.vaibhav.myfavmovie.intent.action.VIEW"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
        <activity android:name=".DisplayListRatingActivity" android:label="@string/DisplayListRatingActivity">
            <intent-filter>
                <action android:name="com.example.vaibhav.myfavmovie.DisplayListRatingActivity.intent.action.VIEW"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
    </application>

</manifest>